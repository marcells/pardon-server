extends layout

block content
    .container-fluid
        if loginNotSuccessful
            .row
                .col-xs-12
                    .alert.alert-warning Wrong username or password! Try it again...

        .row
            .col-xs-12
                form(action='/login', method='post', role='form')
                    .form-group
                        label Username
                        input.form-control(type='text', name='username')
                    
                    .form-group
                        label Password
                        input.form-control(type='password', name='password')
                    
                    button.btn.btn-default(type='submit') Log In
        .row
            .col-xs-12
                h3 Quick login
                ul
                    li
                        form(action='/login', method='post')
                            input(type='hidden', name='username', value='a')
                            input(type='hidden', name='password', value='a')
                            input(type='submit', value='Log In user a')

                    li
                        form(action='/login', method='post')
                            input(type='hidden', name='username', value='a1')
                            input(type='hidden', name='password', value='a')
                            input(type='submit', value='Log In user a1')

                    li
                        form(action='/login', method='post')
                            input(type='hidden', name='username', value='a2')
