extends layout

block scripts
    script(src="/socket.io/socket.io.js")
    script(src="/javascripts/app.js")

block content
    div(ng-controller='ChatController as chat')
        .container-fluid
            .row
                .col-xs-12(ng-repeat='message in chat.messages')
                    .row
                        .col-xs-4 {{message.user}}
                        .col-xs-8 {{message.text}}

        .footer.navbar-default.navbar-fixed-bottom
            .container-fluid
                .row
                    .col-xs-12
                        textarea(elastic, ng-model='chat.message', pardon-enter='send()', placeholder="Write message and press Ctrl+Enter to send...")