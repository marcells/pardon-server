extends layout

block scripts
    script(src="/socket.io/socket.io.js")
    script(src="/javascripts/app.js")

block content
    div(ng-controller='ChatController as chat')
        .container-fluid(ng-repeat='message in chat.messages')
            div
                span: small {{message.user}} @ {{message.date | date: 'HH:mm:ss'}}
                br
                span {{message.message}}
                hr

        .footer.navbar-default.navbar-fixed-bottom
            .container-fluid
                .row
                    .col-xs-12
                        textarea(elastic, ng-model='chat.message', pardon-enter='send()', placeholder="Write message and press Ctrl+Enter to send...")